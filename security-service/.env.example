# Server Configuration
SERVER_PORT=8080
SERVER_HOST=0.0.0.0
GIN_MODE=debug

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=security_service
MONGODB_TIMEOUT=10

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
